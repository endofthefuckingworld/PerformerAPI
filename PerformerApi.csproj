<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- ASP.NET OpenAPI (8.x) -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="[8.0.0,9.0.0)" />
    <!-- EF Core 設計工具 (8.x) -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="[8.0.0,9.0.0)">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <!-- Npgsql EFCore Provider (8.x) -->
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="[8.0.0,9.0.0)" />
    <!-- Swagger -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
  </ItemGroup>
</Project>
